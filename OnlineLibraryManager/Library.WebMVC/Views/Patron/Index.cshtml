@using Library.WebMVC.Models.Patron
@model IEnumerable<PatronDetailModel>
@{
    ViewData["Title"] = "Patron List";
}

<h2 class="text-muted display-4 p-2">@ViewData["Title"]</h2>
<div id="patronIndex">
    <table class="table table-bordered" id="patronIndexTable">
        <thead class="text-muted">
            <tr>
                <th>Profile Link</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Card Id</th>
                <th>Overdue Fees</th>
                <th>Home Library</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model)
            {
                <tr>
                    <td><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">(Profile)</a></td>
                    <td>@patron.LastName</td>
                    <td>@patron.FirstName</td>
                    <td>@patron.LibraryCardId</td>
                    <td>@patron.OverdueFees</td>
                    <td>@patron.HomeLibrary</td>
                </tr>
            }
        </tbody>
    </table>
</div>

