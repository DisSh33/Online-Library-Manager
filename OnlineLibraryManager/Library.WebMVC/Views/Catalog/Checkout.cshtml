@using Library.WebMVC.Models
@model CheckoutModel
@{
    ViewBag.Title = @Model.Title;
}

<div class="container">
    <h2 class="text-muted p-2">Checkout Library Item</h2>

    <div class="jumbotron">
        <div class="row">

            <div class="col-md-3">
                <div>
                    <p id="itemTitle">@Model.Title</p>
                    <img class="detailImage" src="@Model.ImageUrl" />
                </div>
            </div>

            <div class="col-md-9">
            <form method="post" asp-controller="Catalog" asp-action="PlaceCheckout">
                <input asp-for="AssetId" type="hidden"/>
                <div>
                    Please insert a Library Card ID.
                    <input asp-for="LibraryCardId"/>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-success">Check out</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>